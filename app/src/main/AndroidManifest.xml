<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MediaStore.createWriteRequest" />

    <application
        android:name="com.example.myapplication.MyApplication"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup"
        tools:targetApi="29" >
        <activity
            android:name="com.example.myapplication.activity.OrderActivity"
            android:parentActivityName="com.example.myapplication.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.MainActivity" />
        </activity>
        <activity
                android:name="com.example.myapplication.activity.NoEvaluateActivity"
                android:parentActivityName="com.example.myapplication.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.example.myapplication.activity.LoginActivity"
            android:parentActivityName="com.example.myapplication.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.example.myapplication.activity.RegisterActivity"
            android:parentActivityName="com.example.myapplication.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myapplication.activity.RegisterActivity" />
        </activity>
        <activity
            android:name="com.example.myapplication.activity.SnackDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
                android:name="com.example.myapplication.activity.EvaluateActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
                android:name="com.example.myapplication.activity.OrderDetailActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
                android:name="com.example.myapplication.activity.WelcomeActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.example.myapplication.MainActivity"
                android:launchMode="singleTask">
        </activity>
    </application>

</manifest>